@model Projet_csharp.Models.Paiement 
@using Projet_csharp.Models 
@using Microsoft.AspNetCore.Mvc  
@{
   <h2>Enregistrer un paiement</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Montant" class="control-label"></label>
        <input asp-for="Montant" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TypePaiement" class="control-label"></label>
        <input asp-for="TypePaiement" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>

}

